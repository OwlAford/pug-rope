extends ../component/mobile-page.pug

block scripts
  script(src='../js/echarts.slim.js')
  script(src='../js/mobileChartToolkit.js')
  script(src='../js/config.rose.js')
  script(src='../js/config.heap-bar.js')
  script(src='../js/config.bar.js')
  script(src='../js/config.line.js')

block content
  .main-content
    .card
      .card-title 平台当日盈利
      .chart-wrap
        .chart#rose1(style='height: 300px')
      table.app-growth-list(cellpadding='0' cellspacing='0')
        tr.growth-item
          td
            span 今日总盈利：123,123,123
          td(align='right')
            span.growth-label.green 同比10%
            span.growth-label.red 环比-10%
    
    .card
      .card-title 平台当日新增/活跃
      .app-zoom
      .chart-wrap
        .chart#bar1(style='height: 310px')
      table.app-growth-list(cellpadding='0' cellspacing='0')
        tr.growth-item
          td
            span 今日总新增：123,123
          td(align='right')
            span.growth-label.green 同比10%
            span.growth-label.red 环比-10%
        tr.growth-item
          td
            span 今日总活跃：123
          td(align='right')
            span.growth-label.green 同比10%
            span.growth-label.red 环比-10%

    .card
      .card-title 平台本月盈利
